{
    "env": {
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": ["**/*.md"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "prefer-const": "error",
        "consistent-this": "error",
        "comma-dangle": "error",
        "comma-spacing": "error",
        "comma-style": "error",
        "no-trailing-spaces": "error",
        "no-unused-vars": "warn",
        "no-unused-labels": "warn",
        "no-unused-expressions": "warn",
        "array-callback-return": ["error", { "checkForEach": true }]
    }
}
